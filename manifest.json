{
  "manifest_version": 3,
  "name": "EchoRead v2.0 (PDF Support)",
  "version": "2.0",
  "description": "Reads articles and now PDFs.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "OpenDyslexic-Regular.otf",
        "pdf.js",
        "pdf.worker.mjs",
        "viewer.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
