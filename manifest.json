{
  "manifest_version": 3,
  "name": "EchoRead v3.0 (AI Edition)",
  "version": "3.0",
  "description": "Reads articles with AI-powered simplification.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["OpenDyslexic-Regular.otf"],
      "matches": ["<all_urls>"]
    }
  ]
}
