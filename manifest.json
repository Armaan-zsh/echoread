{
  "manifest_version": 3,
  "name": "EchoRead v1.1 (Fixed)",
  "version": "1.1",
  "description": "The core EchoRead experience, now with better fixes.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs" 
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["OpenDyslexic-Regular.otf"],
      "matches": ["<all_urls>"]
    }
  ]
}
