{
  "manifest_version": 3,
  "name": "EchoRead v6.0 (The Real Fix)",
  "version": "6.0",
  "description": "Reads HTML articles and ALL PDFs (including scans) with OCR.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "OpenDyslexic-Regular.otf",
        "readability.js",
        "tesseract.min.js",
        "eng.traineddata",
        "pdf-viewer.html",
        "pdf-viewer.js",
        
        "pdf.mjs",
        "pdf.worker.mjs"
      ],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ]
}
